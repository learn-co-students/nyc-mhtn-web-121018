<% if flash[:errors] %>
  <% flash[:errors].each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for @dog do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>
  <%= f.label :breed %>
  <%= f.text_field :breed %><br/>
  <%= f.label :cuteness_level %>
  <%= f.number_field :cuteness_level %><br/>
  <%= f.label :size %>
  <%= f.text_field :size %><br/>
  <%= f.label :clean %>
  <%= f.check_box :clean %><br/>
  <%= f.submit %>
<% end %>
