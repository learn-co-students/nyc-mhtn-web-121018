<h1>Form for a edit Resolution </h1>

<form action="/resolutions/<%= @resolution.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <input type="text" name="resolution[goal]" value="<%= @resolution.goal %>"><br />
  <input type="date" name="resolution[deadline]" value="<%= @resolution.deadline %>"><br>
  <input type="text" name="resolution[accomplished]" value="<%= @resolution.accomplished %>"><br>
  <input type="submit" value="Update that reesolution!">
</form>
