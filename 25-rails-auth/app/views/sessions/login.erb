<h1>Login</h1>

<% if flash[:bad] %>
  <p style="color:red;"><%= flash[:bad] %></p>
<% end %>

<%= form_tag("/sessions") do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Log IN!!!" %>
<% end %>
